<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- Definición del tipo de datos para el elemento dispositivo -->
  <xs:simpleType name="estadoDispositivo">
    <xs:restriction base="xs:string">
      <xs:enumeration value="conectado"/>
      <xs:enumeration value="ocupado"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Definición del elemento dispositivo con el tipo de datos definido anteriormente -->
  <xs:element name="dispositivo" type="estadoDispositivo"/>

</xs:schema>
